<div class="modal-details">
      <img
        class="modal-details_image"
        src="https://www.themoviedb.org/t/p/w500{{poster_path}}"   
        alt="image is not found"
      />
      <div class="movie-details-data">
        <h2 class="movie-details-data_title">{{title}}</h2>
        <table class="movie-details-data_table">
          <tr>
            <td>Vote/Votes</td>
            <td><span>{{vote_average}}</span> / <span>{{vote_count}}</span></td>
          </tr>
          <tr>
            <td>Popularity</td>
            <td>{{popularity}}</td>
          </tr>
          <tr>
            <td>original Title</td>
            <td>{{original_title}}</td>
          </tr>
          <tr>
            <td>Genre</td>
            {{#each genres}}
            <td>{{this.name}}</td>
            {{/each}}
          </tr>
        </table>
        <p class="movie-details-data_description-title">ABOUT</p>
        <p class="movie-details-data_description">
       {{overview}}
        </p>
      </div>
      <button class="modal-details_watched-button"><span>ADD TO</span> WATCHED</button>
      <button class="modal-details_queue-button"><span>ADD TO</span> QUEUE</button>
    </div>
